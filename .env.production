# Production Environment for aidemo.dollany.app
# Update these values with your actual credentials before deployment

NODE_ENV=production
PORT=3000

# MongoDB Configuration
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/lawbot?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong secret key (at least 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-32chars
JWT_EXPIRES_IN=7d

# Session Configuration
# Generate a strong session secret
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production-32chars

# AI API Keys
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Application URLs
FRONTEND_URL=https://aidemo.dollany.app
BACKEND_URL=https://aidemo.dollany.app

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=noreply@aidemo.dollany.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://aidemo.dollany.app
TRUST_PROXY=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info

# Database Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# Cache Settings
CACHE_TTL=3600

# Admin Settings
ADMIN_EMAIL=admin@aidemo.dollany.app
ADMIN_PASSWORD=change-this-secure-password

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CHAT_HISTORY=true
ENABLE_DOCUMENT_UPLOAD=true

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090